<Application x:Class="ProjMgr.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- 应该在此定义应用程序级的资源。-->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CustomContol;component/Style/Style.xaml" />
                <ResourceDictionary Source="Style/MainResourceDictionary.xaml"/>
                <ResourceDictionary Source="Style/Colors.xaml" />
                <ResourceDictionary Source="Style/Separator.xaml" />
            </ResourceDictionary.MergedDictionaries>
           
        </ResourceDictionary>
    </Application.Resources>
</Application>
