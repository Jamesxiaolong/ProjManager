<UserControl x:Class="ProjMgr.Controls.HostInfoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">

    <Border BorderThickness="1" CornerRadius="4" BorderBrush="#D6D6D8">
        <Grid  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition  Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="Grid1">
                <Image x:Name="img" Height="32" Width="32" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
            <StackPanel  Grid.Column="1" Margin="0,10,0,0">
                <TextBlock x:Name="Num" FontSize="26" Foreground="#1C1C1C" VerticalAlignment="Bottom" HorizontalAlignment="Center" />
                <TextBlock x:Name="Desc" FontSize="14" Foreground="#8F8F91" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,4,0,0" />
            </StackPanel>
        </Grid>
    </Border>

</UserControl>
